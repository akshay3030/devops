version: '3.5'

services:

  monitoror:
    image: monitoror/monitoror:${MTRRTAG:-latest}
    volumes:
      - ./monitoror_config.json/:/etc/monitoror/config.json:ro
    ports:
     - "{{ monitoror_properties["host_port"] }}:8080"
    environment:
      - "MO_CONFIG=/etc/monitoror/config.json"
    restart: unless-stopped
    networks:
      - monitoror-demo

networks:
  monitoror-demo:
